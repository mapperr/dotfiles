[alias]
	ss = status
	aa = add -A
	bb = branch
	pp = !git pull && git push
	pl = pull
	ph = push
	ri = rebase -i
	ac = !git add -A && git commit
	ci = commit
	co = checkout
	sv = !git svn rebase && git svn dcommit
	ll = log --decorate --oneline --branches --graph --abbrev-commit --date=relative --pretty=format:'%C(yellow)%h%Creset %C(green)(%cr) %C(cyan)<%an>%Creset -%C(yellow)%d%Creset %s%Creset'
