[alias]
	ss = status
	aa = add -A
	bb = branch
	pl = pull
	ph = push
	pp = !git pl && git ph
	rb = rebase
	ri = rb -i
	re = remote
	ac = !git add -A && git commit
	ci = commit
	co = checkout
	sv = !git svn rebase && git svn dcommit
    logbase = log --decorate --oneline --branches --graph --abbrev-commit
    l = !git logbase --date=relative --pretty=oneline
    ll = !git logbase --date=relative --pretty
    lll = !git logbase --show-signature --pretty=fuller
	lc = !git logbase --date=relative --pretty=format:'%C(yellow)%h%Creset %C(green)(%cr) %C(yellow)%d%Creset %C(blue)[%G?]<%an>%Creset %s%Creset'
[gui]
